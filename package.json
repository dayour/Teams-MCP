{
  "name": "teams-mcp-server",
  "version": "1.0.0",
  "description": "Microsoft Teams Model Context Protocol (MCP) server for AI assistants like Claude Desktop",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc --build",
    "start": "node lib/index.js",
    "watch": "nodemon lib/index.js",
    "dev": "tsc --build && node lib/index.js",
    "test": "node lib/tests/testRunner.js",
    "test:integration": "node lib/tests/integrationTest.js",
    "validate": "node validate-integration.js",
    "mcp-server": "node lib/mcp-server.js",
    "auth": "node lib/auth-helper.js auth",
    "profile": "node lib/profileManager.js",
    "build-extension": "cd vscode-extension && npm run compile",
    "build-all": "npm run build && npm run build-extension",
    "setup": "node lib/setup.js install",
    "setup-status": "node lib/setup.js status",
    "uninstall": "node lib/setup.js uninstall",
    "configure-claude": "node lib/claude-config.js configure",
    "clean": "rm -rf lib && rm -rf vscode-extension/out"
  },
  "keywords": [
    "teams",
    "mcp",
    "model context protocol",
    "bot",
    "scheduling",
    "meetings",
    "calendar",
    "microsoft-graph",
    "assistant",
    "claude",
    "ai"
  ],
  "author": "Teams Developer",
  "license": "MIT",
  "dependencies": {
    "@azure/msal-node": "^2.6.6",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "adaptivecards": "^3.0.4",
    "axios": "^1.6.5",
    "botbuilder": "^4.21.1",
    "botbuilder-azure-blobs": "^4.21.1",
    "botframework-connector": "^4.21.1",
    "moment": "^2.30.1",
    "node-cron": "^3.0.3",
    "restify": "^11.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/restify": "^8.5.12",
    "nodemon": "^3.0.3",
    "typescript": "^5.3.3"
  }
}
